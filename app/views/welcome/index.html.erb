<div class="container">
  <div class="home-courses-category-container clearfix">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <ul>
            <% @categories.each do |category| %>
                <li class="col-sm-6 col-md-4 col-lg-3">
                  <%= link_to category_courses_path(category.slug) do %>
                      <div class="home-course-category" style="background-image: url('<%= category.image_url %>');">
                        <div class="course-category">
                          <%= category.title %>
                        </div>
                      </div>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="browse-all-course">
      <%= link_to 'Browse courses', courses_path, class: 'btn btn-primary btn-block btn-lg' %>
    </div>
  </div>
</div>
