<div id="page-list-wrapper">
  <div class="page-list-container clearfix">
    <div class="page-list-column">
      <div class="page-list-left-content side-menu col-sm-3  reset-padding">
        <%= render 'shared/side_bar' %>
      </div>

      <div class="page-list-right-content col-sm-9">
        <h4>Pages</h4>

        <p>All (<%= @pages.count %>)</p>
        <table class="table table-responsive table-striped custom-table">
          <tbody>
          <tr>
            <td>
              <%= check_box_tag :page %> Title
            </td>
          </tr>
          <% @pages.each do |page| %>
              <tr>
                <td>
                  <b> <%= page.meta_title %> </b> <br/>
                  <%= link_to 'Edit', edit_page_path(page) %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class=""></div>
    <div class=""></div>
  </div>
</div>
