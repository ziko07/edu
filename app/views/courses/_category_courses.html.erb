<div>
  <h1 class="category-title"> <%= category.title %> </h1>
</div>
<div class="row">
  <div class="col-lg-12">
    <ul class="clearfix browse-course-items">
      <% category.published_courses.each do |course| %>
          <li class="col-sm-6 col-md-4 col-lg-3">
            <div class="image-container">
              <%= image_tag course.image_url.present? ? course.image_url : image_url('default-cover-image.jpg') %>

              <div class="image-text">
                <%= link_to show_course_path(course) do %>
                    <%= course.title %>
                <% end %>
                <p><%= truncate(course.subtitle, length: 25, omission: '...') %></p>
              </div>

            </div>
          </li>
      <% end %>
    </ul>
  </div>
</div>