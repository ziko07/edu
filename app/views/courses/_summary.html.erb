<div class="tab-pane fade in" id="course-summary">

  <div class="header-wrapper">
    <h3 class="reset-margin info-title text-center">
      Course Summary
    </h3>

    <div class="sub-title text-center" style="margin-top: 10px;">
      <p>
        Highlight what the course covers, how it is taught, benefits of course and why students should enroll.
      </p>
    </div>
  </div>
  <div class="input-container">
    <div class="form-wrapper">
      <% if @course.new_record? %>
          <p> Please complete course basics information and save first </p>
      <% else %>
          <%= form_tag '#' do %>
              <div class="form-group">
                <%= label_tag :summary %>
                <%= text_area_tag :summary, '', class: 'course-summary-input' %>
              </div>

              <hr/>
              <div class="form-group text-center">
                <%= link_to '#', class: 'btn btn-success' do %>
                    <i class="fa fa-save"></i> Save
                <% end %>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        tinymce.init({
            selector: 'textarea',
            height: 200
        });
    });
</script>