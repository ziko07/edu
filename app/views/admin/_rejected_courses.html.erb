<div class="tab-pane fade admin-course-wrapper" id="rejected">
  <table class="table tablesorter" id="courses-list">
    <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Status</th>
      <th class="hide-on-mobile">Instructor</th>
      <th class="hide-on-mobile"></th>
    </tr>
    </thead>
    <tbody>
    <% @courses.each do |course| %>
        <tr>
          <td>
            <div style="background-image:url('<%= image_path(course.image) %>');" class="course-image"></div>
          </td>
          <td>
            <div class="border-right">
              <p> <%= course.title %>
                <span class="hide-on-desktop"> Instructed By <%= link_to course.user.first_name, profile_instructors_path(course.user) %> </span>
              </p>
              <%= link_to 'Go to Course', show_course_path(course), class: 'btn btn-info reset-padding reset-border-radius' %>
            </div>
          </td>
          <td>
            <select>
              <option value="Published">Published</option>
              <option value="Pending Review">Pending Review</option>
              <option value="Rejected">Rejected</option>
              <option value="Unpublished">Unpublished</option>
            </select>

            <div class="hide-on-desktop course-status-save">
              <%= link_to 'Save', '#', class: 'btn btn-danger reset-padding reset-border-radius' %>
            </div>
          </td>
          <td class="hide-on-mobile"> <%= course.user.full_name %> </td>
          <td class="hide-on-mobile">
            <%= link_to 'Save', '', class: 'btn btn-danger reset-padding reset-border-radius' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
